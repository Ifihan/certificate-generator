# ============================================================================
# STORAGE PROVIDER CONFIGURATION
# ============================================================================

# Choose your storage provider
# Options: cloudinary, catbox, fileio, tmpfiles
#
# Provider Comparison:
# - cloudinary: Permanent storage, requires credentials, 25GB free tier, CDN
# - catbox: Permanent storage, no credentials, unlimited, CDN
# - fileio: 1-year storage, no credentials, unlimited
# - tmpfiles: Temporary storage, no credentials, unlimited
UPLOAD_SERVICE=cloudinary

# Cloudinary Configuration (only required if UPLOAD_SERVICE=cloudinary)
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Flask Debug Mode (set to False in production)
DEBUG=True

# Server Host (0.0.0.0 for external access, 127.0.0.1 for local only)
HOST=127.0.0.1

# Server Port
PORT=5000
